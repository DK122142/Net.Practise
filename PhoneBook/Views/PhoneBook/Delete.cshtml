@model PhoneBook.ViewModels.PhoneNumberViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div>
    <h2>Are you sure you want to delete phonebook record?</h2>
    <table class="table">
        <tr>
            <th>Number</th><th>Address</th><th>Status</th><th>Added</th>
            <th>Last update</th>
        </tr>

            <tr>
                <td>@Model.Number</td><td>@Model.Address</td><td>@Model.Status</td><td>@Model.Added</td>
                <td>@Model.Updated</td>

            </tr>
        
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Delete</a>
    </form>
</div>